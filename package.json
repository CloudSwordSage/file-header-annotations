{
  "name": "file-header-annotations",
  "displayName": "文件头注释",
  "description": "给代码文件开头自动添加注释",
  "version": "0.0.5",
  "repository": "https://github.com/CloudSwordSage/file-header-annotations",
  "author": {
    "name": "CloudSwordSage",
    "email": "zlf100518@163.com",
    "url": "https://github.com/CloudSwordSage"
  },
  "license": "MIT",
  "publisher": "CloudSwordSage",
  "engines": {
    "vscode": ">=1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "file-header-annotations.createFileHeader",
        "title": "create file header"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "File Header Annotations configuration",
      "properties": {
        "file-header-annotations.enable.time": {
          "type": "boolean",
          "default": true,
          "description": "是否在文件头部添加时间注释"
        },
        "file-header-annotations.enable.author": {
          "type": "boolean",
          "default": true,
          "description": "是否在文件头部添加作者注释"
        },
        "file-header-annotations.enable.file": {
          "type": "boolean",
          "default": true,
          "description": "是否在文件头部添加文件名注释"
        },
        "file-header-annotations.enable.license": {
          "type": "boolean",
          "default": true,
          "description": "是否在文件头部添加许可证信息"
        },
        "file-header-annotations.enable.description": {
          "type": "boolean",
          "default": true,
          "description": "是否在文件头部添加描述注释"
        },
        "file-header-annotations.author": {
          "type": "string",
          "default": "",
          "description": "作者名称"
        },
        "file-header-annotations.disenable.language": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "c",
              "cpp",
              "java",
              "javascript",
              "typescript",
              "css",
              "kotlin",
              "python",
              "ruby",
              "php",
              "swift",
              "go",
              "rust",
              "objective-c",
              "scala",
              "shellscript",
              "perl",
              "lua",
              "haskell",
              "r",
              "matlab",
              "vb"
            ],
            "description": "文件类型"
          },
          "uniqueItems": true,
          "default": [],
          "description": "禁用文件类型注释"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "pnpm vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": ">=1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "eslint": "^9.13.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.3",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  }
}
